<local:CommonPage
    x:Class="MyApp.checkBoxSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="15">
        <TextBlock Text="請選取你喜歡的水果：" FontSize="24"/>
        <StackPanel x:ConnectionId='1' Orientation="Vertical" x:Name="checks">
            <CheckBox x:ConnectionId='3' Content="梨子"                                            />
            <CheckBox x:ConnectionId='4' Content="桃子"                                            />
            <CheckBox x:ConnectionId='5' Content="蘋果"                                            />
            <CheckBox x:ConnectionId='6' Content="葡萄"                                            />
        </StackPanel>
        <Border Margin="0,13,0,0" Padding="6" Background="Green">
            <TextBlock x:ConnectionId='2' x:Name="tbRes" FontSize="24" Foreground="White" TextWrapping="Wrap"/>
        </Border>
    </StackPanel>
</local:CommonPage>

